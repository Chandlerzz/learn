$SIG{CHLD} = \&REAPER,
sub REAPER {
my $stiff,
while * > 0) {
# –û–±—Ä–∞–±–æ—Ç–∞—Ç—å $stiff, –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
