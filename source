use
my =
while (–æ) {
next unless
my $date =
if {
($date = $1)
$date = ParseDate($date);
}
push {
SUBJECT => DATE => $date,
NUMBER => scalar
TEXT =>
};
} continue {
 ,= $ ;
}
for my $msg (sort {
$a>{SUBJECT} $b>{SUBJECT}
I I
$a>{DATE} cmp $b>{DATE}
I I
$a>{NUMBER} <=>
}
)
{
