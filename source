package StrNum;
use Exporter ();
@ISA =
 = # –ù–µ–æ–±—ã—á–Ω–æ
use overload (
'<r>'
 =>
13.14. –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–ø–µ—Ä–∞—Ç–æ—Ä–æ–≤ 485
 => \&stringify,
 => \&boolify,
'0+' =>
'+' => \&concat,
);
# –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä
sub {
my ($value)
bless
sub { ${ $_[0] } }
sub numify { ${ $_[0] > }
sub boolify { ${ $_[0] } }
# –ù–∞–ª–∏—á–∏–µ <=> –¥–∞–µ—Ç –Ω–∞–º <, == –∏ —Ç. –¥.
sub spaceship {
my ($s1, $s2, $inverted) =
$inverted ? $$s2 $$s1 : $$s1 $$s2;
}
# –ò—Å–ø–æ–ª—å–∑—É–µ—Ç stringify
sub concat {
my ($s1, $s2, $inverted) =
$inverted ? ($s2 . $s1) : ($s1 . $s2);
}
# –ò—Å–ø–æ–ª—å–∑—É–µ—Ç stringify
my ($s1, $s2, $inverted)
StrNum $inverted ($s2 —Ö $s1) : ($s1 —Ö $s2);
}
1;
–ü—Ä–∏–º–µ—Ä. –ü–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω—ã–π –∫–ª–∞—Å—Å FixNum
