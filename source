use LWP UserAgent;
use HTTP Request,
use URL
my($url,
my $ua = LWP UserAgent>new(),
while ( $url = url(scalar <>) ) {
next unless $url>scheme =^
$ans = Request>new( HEAD , $url)),
 {
$Date{$url} = 0, # unknown
} else {
print STOERR $url Error [ , $ans>code, ] ,
 ,
}
}
$url ( sort { $Date{$b} <=> $Date{$a} } keys ) {
 %25s , (scalar $Date{$url})
<NONE SPECIFIED> , $url,
}
–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π
