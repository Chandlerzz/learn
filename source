sub start_proxy {
my = (
Proto => tcp ,
Reuse => 1,
Listen SOMAXCONN,
),
push LocalPort => $SERVICE $SERVICE,
push LocalAddr => $LOCAL
$proxy_server = Socket
proxy server $@',
print [Proxy server on , || $SERVICE), initialized ]\n ,
}
