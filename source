package Person;
use strict,
use Carp;
use vars qw($AUTOLOAD %ok_field);
# –ü—Ä–æ–≤–µ—Ä–∫–∞ —á–µ—Ç—ã—Ä–µ—Ö –∞—Ç—Ä–∏–±—É—Ç–æ–≤
for my $attr ( qw(name age peers ) { $ok_field{$attr}++; }
sub AUTOLOAD {
my $self = shift;
my = $AUTOLOAD;
$attr
unless $attr =^ /[^AZ]/; # –ü—Ä–æ–ø—É—Å—Ç–∏—Ç—å DESTROY –∏ –¥—Ä—É–≥–∏–µ
# –º–µ—Ç–æ–¥—ã, –∏–º–µ–Ω–∞ –∫–æ—Ç–æ—Ä—ã—Ö
# –∑–∞–ø–∏—Å–∞–Ω—ã –≤ –≤–µ—Ä—Ö–Ω–µ–º —Ä–µ–≥–∏—Å—Ç—Ä–µ
croak "invalid attribute method: unless
$self>{uc $attr} = shift
$self>{uc $attr};
}
sub new {
my $proto = shift;
my $class = $proto;
 = && $proto;
my $self = {};
bless($self, $class);
$self;
}
1;
